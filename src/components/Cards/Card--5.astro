---
import data from "../../data/card.js";
---

<section class="section--pad bg-lwhite">
  <div class="container">
    <!--  -->
    <!-- Card Type 5 -->
    <div class="row mb-60">
      {
        data.slice(0, 3).map((input, index) => {
          return (
            <div class="col-sm-4">
              <div class="card card--5">
                <div class="card__head">
                  <div class="card__head--profileimg card--circlewrap">
                    <img src={input.userimg} alt="" />
                  </div>
                  <div class="card__head--profiledetail">
                    <h3>{input.subtitle}</h3>
                    <p>{input.userdesignation}</p>
                  </div>
                </div>
                <div class="card__content">
                  <p>"{input.description}"</p>
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
    <!--  -->
  </div>
</section>
