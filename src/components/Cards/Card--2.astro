---
import data from "../../data/card.js";
---
<section class="section--pad">
    <div class="container">
        <!-- Card Type 2 -->
        <div class="row mb-60">
            {
            data.slice(0, 3).map((input, index) => {
            return (
            <div class="col-sm-4">
                <div class="card card--2" style=`background-image: url("${input.productimg}");`>
                    <div class="card__content">
                        <h3>{input.subtitle}</h3>
                        <h4>{input.title}</h4>
                    </div>
                    <div class="card__overlay">
                        <h3>{input.subtitle}</h3>
                        <p>{input.description}</p>
                        <a href="#" class="readmore">Learn More</a>
                    </div>
                </div>
            </div>
            );
            })
            }
        </div>
        <!--  -->
    </div>
</section>