---
import data from "../../data/card.js";
---

<section class="section--pad bg-lwhite">
  <div class="container">
    <!-- Card Type 7 -->
    <div class="row mb-60">
      {
        data.slice(0, 3).map((input, index) => {
          return (
            <div class="col-sm-4">
              <div class="card card--7">
                <div class="card__head card--circlewrap">
                  <img src={input.blogimg} alt="" />
                </div>
                <div class="card__content">
                  <h3>{input.title}</h3>
                  <p class="txt-orange">{input.subtitle}</p>
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
    <!--  -->
  </div>
</section>
